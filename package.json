{
  "name": "whatsapp-bot",
  "version": "1.0.0",
  "description": "Bot de WhatsApp para recibir pedidos de carnicería. Arquitectura: webhook, SQL Server, impresión ESC/POS, sesiones persistentes.",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon --watch src --exec node src/app.js",
    "lint": "eslint src/** --fix",
  "format": "prettier --write './src/**/*.js'"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "@azure/msal-node": "^3.7.3",
    "axios": "^1.5.0",
    "body-parser": "^1.20.2",
    "dayjs": "^1.11.9",
    "debug": "^4.3.4",
    "dotenv": "^17.2.2",
    "escpos": "^3.0.0-alpha.6",
    "express": "^4.18.2",
    "mssql": "^11.0.1",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "uuid": "^9.0.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
}
